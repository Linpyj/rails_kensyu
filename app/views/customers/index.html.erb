<h1>顧客一覧</h1>

<table class="table">
<tr>
<th>
  顧客名
</th>
</tr>
<% @customers.each do |c| %>
<tr>

  <td>
  <%= c.name %>
  </td>
  <td>
  <%= link_to("詳細",customers_show_path(id: c)) %>
  </td>
  <td>
  <%= link_to("編集",customers_edit_path(id: c)) %>
  </td>
  <td>
  <%= link_to("削除",customers_destroy_path(id: c), method: :delete) %>
  </td>
  <td>
  <%= link_to("注文する",orders_new_path(id: c)) %>
  </td>
</tr>

<% end %>
</table>

<%= link_to("顧客登録へ","/customers/new") %>